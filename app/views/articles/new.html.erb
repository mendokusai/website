<h2>New Post</h2>

<%= form_for @article do |f| %>

	<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title %>
	</div>

	<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, size: "100x50" %>
	</div>

	<div class="form-group">
	<%= f.label :tags %>
	<%= f.text_field :tags %>
	</div>

	<div class="form-group">
	<%= f.submit %>
	</div>
	
<% end %>