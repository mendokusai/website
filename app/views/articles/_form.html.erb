<%= form_for @article do |f| %>

	<% if @article.errors.any? %>
	<div id="error_explanation">
	<h2>
	<%= pluralize(@article.errors.count, "error") %>
	prohibited
		this article from being saved: </h2>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
		<% end %>

	<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title %>
